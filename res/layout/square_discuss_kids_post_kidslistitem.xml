<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/user_itemmiddle_press"
    android:id="@+id/square_discuss_kids_post_layout"
    android:orientation="horizontal">

    <ImageView 
	  	android:layout_width="40dp"
	   	android:layout_height="40dp"
	   	android:id="@+id/post_item_kidlist_user_img"
	   	android:layout_marginLeft="3dp"
	   	android:layout_marginTop="3dp"
	   	/>
    <LinearLayout 
        android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:orientation="vertical"
        >
        <LinearLayout 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            >
			<TextView 
	        	android:id="@+id/post_item_kidlist_user_name"
	        	android:layout_width="wrap_content"
	        	android:layout_height="wrap_content"
	        	android:gravity="center_vertical"
	        	android:textColor="#f0938c"
	        	android:textSize="16sp"
	        	/>
			<TextView 
	        	android:layout_width="wrap_content"
	        	android:layout_height="wrap_content"
	        	android:gravity="center_vertical"
	        	android:textColor="#f0938c"
	        	android:textSize="16sp"
	        	android:text=":"
	        	/>
			<TextView 
			    android:id="@+id/post_item_kidlist_details"
	        	android:layout_width="wrap_content"
	        	android:layout_height="wrap_content"
	        	android:gravity="center_vertical"
	        	android:textColor="#AFAFAF"
	        	android:textSize="16sp"
	        	/>
        </LinearLayout>
        <TextView 
	      	android:layout_width="wrap_content"
	       	android:layout_height="wrap_content"
	        android:gravity="center_vertical"
	        android:layout_marginTop="2dp"
	        android:textColor="#AFAFAF"
	        android:textSize="16sp"
	        android:text="12小时前"
	        />
    </LinearLayout>
</LinearLayout>