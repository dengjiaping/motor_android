<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#E7E7E7"
    >

    <RelativeLayout
        android:id="@+id/post_title_bar"
        android:layout_width="fill_parent"
        android:layout_height="50.0dip" >
        
    <include 
        layout="@layout/title"
        />

    <TextView
        android:id="@+id/post_title"      
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:textSize="23sp"
        android:layout_centerInParent="true"
        android:text="@string/theme_post"
        />
    <include 
        android:id="@+id/return_post"
        layout="@layout/back"
        />
    <ImageView 
        android:id="@+id/up_menu_post"
        android:contentDescription="@string/desc"
        android:layout_width="25dp"
        android:layout_height="20dp"
        android:background="@drawable/unfold"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="5dp"
        />
    <TextView
        android:layout_toLeftOf="@id/up_menu_post" 
        android:id="@+id/only_see_poster"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:textColor="#ffffff"
        android:textSize="17sp"
        android:text="@string/onlysee_poster"
        />
	</RelativeLayout>
	<com.moto.listview.CustomScrollView 
	    android:id="@+id/post_scrollview"
	    android:layout_width="fill_parent"
	    android:layout_below="@id/post_title_bar"
	    android:layout_marginBottom="50dp"
	    android:layout_height="wrap_content"
	    >
	    <LinearLayout 
	        android:layout_width="fill_parent"
	    	android:layout_height="wrap_content"
	    	android:orientation="vertical"
	        >
	    <LinearLayout 
	    	android:layout_width="fill_parent"
	    	android:layout_height="wrap_content"
	    	android:background="#ffffff"
	    	android:orientation="vertical"
	    	>
	    <TextView 
	    	android:id="@+id/post_theme_details"
    		android:layout_width="fill_parent"
    		android:layout_height="wrap_content"
    		android:textSize="20sp"
    		android:textColor="#000000"
    		android:layout_marginTop="6dp"
    		android:layout_marginLeft="6dp"
    		/>
	    <RelativeLayout
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="10dp"
	        android:layout_marginBottom="2dp"
	        >
	        <LinearLayout 
	        	android:id="@+id/response_layout"
	        	android:layout_width="wrap_content"
	    		android:layout_height="wrap_content"
	    		android:layout_centerVertical="true"
	    		android:layout_marginRight="3dp"
	    		android:layout_alignParentRight="true"
	    		android:orientation="horizontal"
	        	>
	        <ImageView 
	            android:layout_width="15dp"
	            android:layout_height="15dp"
	            android:layout_gravity="center"
	            android:background="@drawable/comment"
	            />
	        <TextView
	            android:id="@+id/square_discuss_kids_time"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:gravity="center"
	            android:text="40"
	            android:textSize="12sp"
	            android:textColor="#f0938c"
	            android:layout_marginLeft="2dp"
	            />
	    </LinearLayout>
	    <LinearLayout 
	        android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
	    	android:layout_toLeftOf="@id/response_layout"
	    	android:layout_centerVertical="true"
	    	android:layout_marginRight="10dp"
	    	android:orientation="horizontal"
	        >
	        <ImageView 
	            android:layout_width="15dp"
	            android:layout_height="15dp"
	            android:layout_gravity="center"
	            android:background="@drawable/time"
	            />
	        <TextView
	            android:id="@+id/square_discuss_kids_user"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:gravity="center"
	            android:textSize="12sp"
	            android:text="1小时前"
	            android:textColor="#f0938c"
	            android:layout_marginLeft="2dp"
	            />
	    	</LinearLayout>
	  	 </RelativeLayout>
		</LinearLayout>
		
	    <LinearLayout 
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="10dp"
	        android:layout_marginLeft="10dp"
	        android:layout_marginRight="10dp"
	        android:background="@drawable/user_item_press"
	        android:orientation="vertical"
	        >
	        <RelativeLayout 
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:layout_marginTop="3dp"
	            >
	            <ImageView 
	   	    		android:layout_width="40dp"
	   	    		android:layout_height="40dp"
	   	    		android:id="@+id/post_user_img"
	   	    		android:layout_marginLeft="3dp"
	   	    		android:layout_marginTop="3dp"
	   	    		/>
	            <TextView 
	                android:id="@+id/post_user_name"
	                android:layout_toRightOf="@id/post_user_img"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:gravity="center"
	                android:layout_marginLeft="3dp"
	                android:textColor="#AFAFAF"
	                android:textSize="16sp"
	                />
	            <ImageView 
	   	    		android:layout_width="16dp"
	   	    		android:layout_height="16dp"
	   	    		android:id="@+id/post_level_img"
	   	    		android:layout_marginTop="2dp"
	   	    		android:layout_toRightOf="@id/post_user_name"
	   	    		android:layout_marginLeft="3dp"
	   	    		android:background="@drawable/level"
	   	    		/>
	            <TextView 
	                android:id="@+id/post_level"
	                android:layout_toRightOf="@id/post_level_img"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_marginLeft="1dp"
	                android:textColor="#AFAFAF"
	                android:textSize="16sp"
	                android:text="11"
	                />
	            <FrameLayout 
	                android:id="@+id/post_brand"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_marginLeft="3dp"
	                android:layout_toRightOf="@id/post_level"
	                >
	                <ImageView 
	   	    			android:layout_width="35dp"
	   	    			android:layout_height="18dp"
	   	    			android:layout_gravity="center"
	   	    			android:background="@drawable/type"
	   	    			/>
	                <TextView 
	                	android:id="@+id/post_brand_name"
	                	android:layout_width="wrap_content"
	                	android:layout_height="wrap_content"
	                	android:layout_gravity="center"
	                	android:gravity="center"
	                	android:textColor="#ffffff"
	                	android:textSize="15sp"
	                	android:text="嘉陵"
	                	/>
	            </FrameLayout>
	            <TextView 
	                android:id="@+id/original_poster"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_toRightOf="@id/post_brand"
	                android:textColor="#AFAFAF"
	                android:layout_marginLeft="3dp"
	                android:textSize="16sp"
	                android:text="楼主"
	                />
	            <TextView 
	                android:id="@+id/original_poster_time"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_below="@id/post_user_name"
	                android:layout_toRightOf="@id/post_user_img"
	                android:textColor="#AFAFAF"
	                android:layout_marginLeft="3dp"
	                android:textSize="12sp"
	                android:text="11小时前"
	                />
	            <TextView 
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:textColor="#AFAFAF"
	                android:layout_alignParentRight="true"
	                android:layout_marginRight="4dp"
	                android:textSize="15sp"
	                android:text="@string/first_post"
	                />
	        </RelativeLayout>
	         <TextView 
		    	android:id="@+id/post_details"
	    		android:layout_width="fill_parent"
	    		android:layout_height="wrap_content"
	    		android:textSize="20sp"
	    		android:textColor="#000000"
	    		android:layout_marginTop="6dp"
	    		android:layout_marginLeft="6dp"
	    		/>
	        <com.moto.img.ScaleImageView 
	   	    	android:layout_width="match_parent"
	   	    	android:layout_height="match_parent"
	   	    	android:layout_marginLeft="10dp"
	   	    	android:layout_marginRight="10dp"
	   	    	android:layout_marginBottom="10dp"
	   	    	android:id="@+id/post_detail_img"
	   	    	android:layout_marginTop="3dp"
	   	    	android:visibility="gone"
	   	    	/>
	    </LinearLayout>
   		<com.moto.listview.NoScrollListview
		   	android:id="@+id/post_main_list"
		    android:layout_width="fill_parent"
		    android:layout_marginTop="5dp"
		    android:layout_marginLeft="10dp"
	        android:layout_marginRight="10dp"
		    android:layout_height="wrap_content"
		    android:dividerHeight="5dp"
		   	android:divider="#E7E7E7"
	        android:scrollbars="none"
	        />
	 </LinearLayout>
	</com.moto.listview.CustomScrollView>
	<LinearLayout 
	    android:background="#009DB8"
	    android:layout_width="fill_parent"
	    android:layout_height="50dp"
	    android:orientation="vertical"
	    android:layout_alignParentBottom="true"
	    >
	    <TextView 
        	android:layout_width="fill_parent"
        	android:layout_height="2.0dip"
        	android:background="#AFAFAF"
        	/>
	    <LinearLayout 
	    	android:layout_width="fill_parent"
	    	android:layout_height="48dp"
	    	android:orientation="horizontal"
	    	>
	    <ImageView 
  	      	android:id="@+id/post_camera"
  	        android:layout_width="0dp"
  	        android:layout_height="30dp"
  	        android:layout_marginLeft="10dp"
  	        android:layout_marginRight="10dp"
  	        android:layout_weight="1"
  	        android:clickable="true"
  	        android:layout_gravity="center"
  	        android:contentDescription="@string/desc"
  	        android:background="@drawable/camera_style"
  	        />
	    <EditText
	        android:id="@+id/post_response_theme_edit"
	        android:layout_width="0dp"
	        android:layout_weight="8"
	        android:layout_height="35dp"
	        android:background="@drawable/edit_text_x"
	        android:layout_gravity="center"
	        android:hint="@string/Isay"
	        />
	    <ImageView 
  	      	android:id="@+id/post_send"
  	        android:layout_width="0dp"
  	        android:layout_height="30dp"
  	        android:layout_marginLeft="10dp"
  	        android:layout_marginRight="10dp"
  	        android:layout_weight="1"
  	        android:clickable="true"
  	        android:layout_gravity="center"
  	        android:contentDescription="@string/desc"
  	        android:background="@drawable/send"
  	        />
	</LinearLayout>
	</LinearLayout>
</RelativeLayout>