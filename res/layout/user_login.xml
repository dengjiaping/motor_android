<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/moto_background"
    android:orientation="vertical" >
	<RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="50.0dip" >
        
    <include 
        layout="@layout/title"
        />

    <TextView
        android:id="@+id/user_login_register"      
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:clickable="true"
        android:gravity="right"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="15dp"
        android:text="@string/bit_register"
        />
    <TextView    
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:textSize="30sp"
        android:layout_centerInParent="true"
        android:text="@string/userlogin"
        />
	</RelativeLayout>
	<EditText
	    android:id="@+id/user_login_name"
	    android:layout_marginTop="30dp"
     	android:layout_width="fill_parent"
        android:layout_height="50dip"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/login_input"
        android:drawableLeft="@drawable/login_icon_account"
        android:drawablePadding="25dip"
        android:hint="@string/name_or_email"
        android:inputType="textEmailAddress"
        android:paddingLeft="25dip"
        android:textColor="#ff98bede"
        android:textColorHint="#ffdddddd" 
        />

    <EditText
        android:id="@+id/user_login_password"
        android:layout_width="fill_parent"
        android:layout_height="50dip"
        android:layout_marginBottom="8dip"
        android:layout_marginLeft="8dip"
        android:layout_marginRight="8dip"
        android:background="@drawable/login_input"
        android:drawableLeft="@drawable/login_icon_password"
        android:drawablePadding="25dip"
        android:hint="@string/password_hint"
        android:paddingLeft="25dip"
        android:inputType="textPassword"
        android:textColor="#ff98bede"
        android:textColorHint="#ffdddddd" />
	
	<LinearLayout 
	    android:layout_width="wrap_content"
	    android:layout_gravity="center"
	    android:layout_height="wrap_content"
	    android:layout_marginTop="10dp"
	    android:orientation="vertical"
	    >
	    <TextView      
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textColor="#747675"
	        android:layout_gravity="center"
	        android:textSize="20sp"
	        android:text="@string/forget_password"
	        />
	    <TextView 
	        android:layout_gravity="center"
        	android:layout_width="fill_parent"
        	android:layout_height="1dp"
        	android:background="#AFAFAF"
        	/>
	</LinearLayout>
	
	<Button
       	android:id="@+id/user_login_button"
        android:layout_width="fill_parent"
        android:layout_height="45dip"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="8dip"
        android:layout_marginRight="8dip"
        android:background="@drawable/login_btn"
        android:shadowColor="#7f000000"
        android:shadowDx="0.0"
        android:shadowDy="1.0"
        android:shadowRadius="1.0"
        android:text="@string/userlogin"
        android:textColor="#ffffff"
        android:textSize="20sp" 
        android:enabled="true"/>
	
</LinearLayout>