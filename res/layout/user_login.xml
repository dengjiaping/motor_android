<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bootstrapbutton="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/moto_background"
    android:orientation="vertical" >
    <ImageView
        android:layout_width="fill_parent"
        android:layout_marginTop="60dp"
        android:layout_height="140dp"
        android:background="@drawable/motoimage"
        />
    <com.moto.user.BootstrapEditText
        android:id="@+id/user_login_name"
        android:layout_width="fill_parent"
        android:layout_height="60dip"
        android:textSize="18sp"
        android:drawableLeft="@drawable/login_icon_account"
        android:inputType="textEmailAddress"
        bootstrapbutton:be_state="success"
        android:textColor="#ff98bede"
        android:drawablePadding="20dip"
        android:textColorHint="#ffdddddd"
        android:hint="@string/name_or_email"
        />
    <com.moto.user.BootstrapEditText
        android:id="@+id/user_login_password"
        android:layout_width="fill_parent"
        android:layout_height="60dip"
        android:textSize="18sp"
        android:drawablePadding="20dip"
        android:drawableLeft="@drawable/login_icon_password"
        android:inputType="textPassword"
        bootstrapbutton:be_state="success"
        android:textColor="#ff98bede"
        android:textColorHint="#ffdddddd"
        android:hint="@string/password_hint"
        />

	<LinearLayout
	    android:layout_width="wrap_content"
	    android:layout_gravity="center"
	    android:layout_height="wrap_content"
	    android:layout_marginTop="10dp"
        android:visibility="gone"
	    android:orientation="vertical"
	    >
	    <TextView
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textColor="#747675"
	        android:layout_gravity="center"
	        android:textSize="20sp"
	        android:text="@string/forget_password"
	        />
	    <TextView
	        android:layout_gravity="center"
        	android:layout_width="fill_parent"
        	android:layout_height="1dp"
        	android:background="#AFAFAF"
        	/>
	</LinearLayout>
	


    <com.moto.user.BootstrapButton
        android:id="@+id/user_login_button"
        android:layout_width="fill_parent"
        android:layout_height="70dip"
        android:clickable="true"
        android:text="@string/userlogin"
        bootstrapbutton:bb_text_gravity="center"
        bootstrapbutton:bb_type="success" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="#E2EBB4"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/quicklogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="#000099"
            android:gravity="right|center_vertical"
            android:layout_marginTop="17.5dp"
            android:layout_marginRight="12dp"
            android:text="@string/quicklogin"
            />
        </RelativeLayout>

	
</LinearLayout>