<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:orientation="vertical"
    android:paddingBottom="5dp"
    android:background="#ffffff"
    android:layout_height="wrap_content" >

    <TextView
        android:id="@+id/inform_chat_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"

        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:textColor="#000000"
        android:textSize="15sp" />
    
    <RelativeLayout
        android:layout_marginRight="5dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp" >

        <ImageView
            android:id="@+id/inform_chat_user_image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"

            android:focusable="false" />



        <TextView
            android:id="@+id/inform_chat_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@+id/inform_chat_user_image"
            android:layout_alignParentBottom="true"
            android:padding="10dp"
            android:background="@drawable/frame2"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:lineSpacingExtra="2dp"
            android:textColor="#ff000000"
            android:textSize="14sp" />
        
    </RelativeLayout>

    <TextView
        android:id="@+id/inform_chat_user_username"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:layout_marginRight="5dp"
        android:textSize="15sp"
        android:textColor="#777777"
        />
</LinearLayout>