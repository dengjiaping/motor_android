<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:clickable="true"
    
    android:orientation="vertical" >
   
	<LinearLayout 
	    android:background="@drawable/user_item_press"
	    
	    android:orientation="vertical"
		android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
	    >
	    <RelativeLayout 
		   	android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:layout_marginTop="3dp"
		    >
	    <ImageView 
	   	   	android:layout_width="40dp"
	   	    android:layout_height="40dp"
	   	    android:id="@+id/post_item_user_img"
	   	    android:layout_marginLeft="3dp"
	   	    android:layout_marginTop="3dp"
	   	    />
	    <TextView 
	        android:id="@+id/post_item_user_name"
	        android:layout_toRightOf="@id/post_item_user_img"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:gravity="center"
	        android:layout_marginLeft="3dp"
	        android:textColor="#AFAFAF"
	        android:textSize="16sp"
	        />
	    <ImageView 
	   	    android:layout_width="16dp"
	   	    android:layout_height="16dp"
	   	    android:id="@+id/post_item_level_img"
	   	    android:layout_marginTop="2dp"
	   	    android:layout_toRightOf="@id/post_item_user_name"
	   	    android:layout_marginLeft="3dp"
	   	    android:background="@drawable/level"
	   	    />
	    <TextView 
	        android:id="@+id/post_item_level"
	        android:layout_toRightOf="@id/post_item_level_img"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="1dp"
	        android:textColor="#f0938c"
	        android:textSize="16sp"
	        android:text="11"
	        />
	    <FrameLayout 
	        android:id="@+id/post_item_brand"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="3dp"
	        android:layout_toRightOf="@id/post_item_level"
	        >
	        <ImageView 
	   	    	android:layout_width="35dp"
	   	    	android:layout_height="18dp"
	   	    	android:layout_gravity="center"
	   	    	android:background="@drawable/type"
	   	    	/>
	        <TextView 
	           	android:id="@+id/post_item_brand_name"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_gravity="center"
	            android:gravity="center"
	            android:textColor="#ffffff"
	            android:textSize="15sp"
	            android:text="嘉陵"
	            />
	    </FrameLayout>
	    <TextView 
	        android:id="@+id/original_item_poster"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_toRightOf="@id/post_item_brand"
	        android:textColor="#AFAFAF"
	        android:layout_marginLeft="3dp"
	        android:textSize="16sp"
	        android:visibility="gone"
	        />
	    <TextView 
	        android:id="@+id/original_item_poster_time"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_below="@id/post_item_user_name"
	        android:layout_toRightOf="@id/post_item_user_img"
	        android:textColor="#AFAFAF"
	        android:layout_marginLeft="3dp"
	        android:textSize="12sp"
	        />
	    <TextView 
	        android:id="@+id/post_item_post"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textColor="#AFAFAF"
	        android:layout_alignParentRight="true"
	        android:layout_marginRight="4dp"
	        android:textSize="15sp"
	        android:text="@string/post"
	        />
	    <TextView
	        android:id="@+id/post_item_num"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_toLeftOf="@id/post_item_post"
	        android:textColor="#AFAFAF"
	        android:textSize="15sp"
	        />
	</RelativeLayout>
	
	<TextView 
	  	android:id="@+id/post_item_details"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:textColor="#000000"
	    android:layout_marginLeft="43dp"
	    android:layout_marginTop="3dp"
	    android:textSize="18sp"
	    />
	<ImageView 
	    android:id="@+id/post_item_detail_img"
	    android:layout_marginTop="5dp"
	   	android:layout_width="fill_parent"
	   	android:layout_height="wrap_content"
	   	android:visibility="gone"
	   	/>
	<LinearLayout
	    android:id="@+id/post_item_reaponse"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_marginTop="10dp"
	    android:layout_marginBottom="3dp"
	    android:clickable="true"
	    android:focusable="true"
	    android:layout_marginRight="3dp"
	    android:layout_gravity="right"
	    android:orientation="horizontal"
	    >
	    <ImageView 
	   		android:layout_width="20dp"
	   		android:layout_height="20dp"
	   		android:focusable="false"
	   		android:layout_gravity="center_vertical"
	   		android:background="@drawable/comment"
	   		/>
	    <TextView 
	    	android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
	    	android:textColor="#AFAFAF"
	    	android:textSize="16sp"
	    	android:layout_gravity="center_vertical"
	    	android:layout_marginLeft="2dp"
	    	android:text="@string/response"
	    	/>
	</LinearLayout>
	</LinearLayout>
	<LinearLayout 
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_marginLeft="5dp"
	    android:layout_marginRight="5dp"
	    android:background="#E7E7E7"
	    android:id="@+id/square_discuss_kids_post_item_groups"
	    android:orientation="vertical"
	    />
	
</LinearLayout>