<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#ffffff"
    android:descendantFocusability="blocksDescendants"
    >
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        >
        <LinearLayout
            android:id="@+id/live_kids_item_timelayout"
            android:layout_width="fill_parent"
            android:layout_margin="4dp"
            android:visibility="gone"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:layout_marginRight="2dp"
                android:textColor="#41c1d7"
                android:id="@+id/live_kids_item_datenum"
                />

            <ImageView
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_margin="2dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/tuoyuan"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:layout_marginLeft="2dp"
                android:textColor="#41c1d7"
                android:id="@+id/live_kids_item_date"
                />

            <TextView
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textColor="#41c1d7"
                android:id="@+id/live_kids_item_week"
                />
        </LinearLayout>
        <LinearLayout
            android:visibility="gone"
            android:id="@+id/live_kids_item_userlayout"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            >
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="2dp"
                android:id="@+id/live_kids_item_user_img"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="3dp"
                />
            <TextView
                android:id="@+id/live_kids_item_username"
                android:textColor="#41c1d7"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:singleLine="true"
                android:layout_marginTop="2dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="7dp"
                android:gravity="center_vertical"
                android:textSize="18sp"
                />
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_gravity="right|center_vertical"
                android:gravity="right|center_vertical"
                android:orientation="horizontal"
                >
                <TextView
                    android:id="@+id/live_kids_item_time_text"
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="3dp"

                    android:layout_gravity="center_vertical"
                    android:layout_height="wrap_content"
                    android:textColor="#41c1d7"
                    android:textSize="14sp"
                    />

                <TextView
                    android:visibility="gone"
                    android:layout_marginLeft="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:layout_marginRight="3dp"
                    android:textColor="#41c1d7"
                    android:id="@+id/live_kids_item_text_week"
                    />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            >
            <com.moto.photo.UserPhotosView
                android:id="@+id/otherprofile_upv_photos"
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >
                <com.moto.img.ScaleImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:focusable="false"
                    android:adjustViewBounds="true"
                    android:scaleType="fitXY"
                    android:layout_gravity="center_horizontal"
                    android:id="@+id/live_kids_item_img"
                    android:src="@null"
                    />
                <com.moto.img.ScaleImageView
                    android:id="@+id/live_kids_item_img_cover"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:adjustViewBounds="true"
                    android:scaleType="fitXY"
                    android:layout_centerInParent="true"
                    android:background="@drawable/bg_vipavatar_cover"
                    android:clickable="true"
                    />

                <com.moto.listview.ProgressBarView
                    android:id="@+id/live_kids_item_progress_View"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_centerInParent="true"
                    android:visibility="gone"
                    />
            </RelativeLayout>
            <TextView
                android:id="@+id/live_kids_item_details"
                android:textColor="#000000"
                android:layout_marginLeft="43dp"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="3dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                />
            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"

                android:layout_marginBottom="10dp"
                >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginRight="3dp"
                    android:layout_marginLeft="3dp"
                    android:orientation="horizontal"
                    >
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:id="@+id/live_kids_item_position"
                        android:background="@drawable/location"
                        />
                    <TextView
                        android:id="@+id/live_kids_item_position_text"
                        android:layout_width="wrap_content"
                        android:layout_marginLeft="3dp"
                        android:singleLine="true"
                        android:layout_gravity="center_vertical"
                        android:layout_height="wrap_content"
                        android:textColor="#41c1d7"
                        android:textSize="12sp"
                        />
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="3dp"
                    android:layout_alignParentRight="true"
                    >

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_alignParentRight="true"
                        android:id="@+id/live_kids_item_comment_layout"
                        >
                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="12dp"
                            android:layout_marginRight="3dp"
                            android:layout_centerVertical="true"
                            android:id="@+id/live_comment_img"
                            android:layout_gravity="center_vertical"
                            android:background="@drawable/pinglun"
                            />
                        <TextView
                            android:layout_toRightOf="@id/live_comment_img"
                            android:id="@+id/live_kids_comment_num"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#000000"
                            android:layout_centerVertical="true"
                            android:gravity="center_vertical"
                            android:layout_marginLeft="4dp"
                            android:textSize="12sp"
                            />
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:clickable="true"
                        android:layout_marginRight="10dp"
                        android:layout_toLeftOf="@id/live_kids_item_comment_layout"
                        android:id="@+id/live_item_like_layout"
                        >
                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="12dp"
                            android:id="@+id/live_like_img"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="3dp"
                            android:layout_gravity="center_vertical"
                            android:background="@drawable/like1_broadcast"
                            />
                        <TextView
                            android:id="@+id/live_kids_like_people_num"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#000000"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@id/live_like_img"
                            android:gravity="center_vertical"
                            android:layout_marginLeft="4dp"
                            android:textSize="12sp"
                            />
                    </RelativeLayout>
                </RelativeLayout>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>