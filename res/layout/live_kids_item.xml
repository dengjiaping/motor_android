<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:descendantFocusability="blocksDescendants"
    >
	<LinearLayout 
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent"
	    android:orientation="vertical"
	    >
	    <LinearLayout 
	        android:layout_width="fill_parent"
	        android:layout_height="50dp"
	        android:orientation="horizontal"
	        >
	        <ImageView 
	   	    	android:layout_width="40dp"
	   	    	android:layout_height="40dp"
	   	    	android:layout_marginLeft="2dp"
	   	    	android:id="@+id/live_kids_item_user_img"
	   	    	android:layout_gravity="center_vertical"
	   	    	android:layout_marginTop="3dp"
	   	    	/>
	         <TextView
		   	   	android:id="@+id/live_kids_item_username"
		   	    android:textColor="#f0938c"
		   	    android:layout_width="wrap_content"
		   	    android:layout_height="wrap_content"
		   	    android:singleLine="true"
		   	    android:layout_gravity="center_vertical"
		   	    android:layout_marginLeft="5dp"
		   	    android:gravity="center"
		   	    android:textSize="23sp"
		   	    />
	    </LinearLayout>
	    <LinearLayout 
	        android:layout_width="fill_parent"
	    	android:layout_height="fill_parent"
	    	android:orientation="vertical"
	    	>
	        <com.moto.photo.UserPhotosView
        		android:id="@+id/otherprofile_upv_photos"
        		android:visibility="gone"
        		android:orientation="vertical"
        		android:layout_width="fill_parent"
        		android:layout_height="wrap_content" />
	        <RelativeLayout 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:background="#E6F3F8"
	            >
	            <com.moto.img.ScaleImageView 
	        	 	android:layout_width="match_parent"
	        		android:layout_height="match_parent"
	        		android:focusable="false"
	        		android:layout_gravity="center_horizontal"
	        		android:id="@+id/live_kids_item_img"
	        		android:visibility="gone"
	        		android:src="@null"
	        		/>
		        <com.moto.img.ScaleImageView 
			        android:id="@+id/live_kids_item_img_cover"
			        android:layout_width="match_parent"
			        android:layout_height="match_parent"
			        android:layout_centerInParent="true"
			        android:background="@drawable/bg_vipavatar_cover"
			        android:clickable="true"
			        android:visibility="gone"
			        />
		        
		        <com.moto.listview.ProgressBarView
	        		android:id="@+id/live_kids_item_progress_View"
	        		android:layout_width="70dp"
	        		android:layout_height="70dp"
	        		android:layout_centerInParent="true"
	        		android:visibility="gone"
	        		/>
	        </RelativeLayout>
		    <TextView
		   	   	android:id="@+id/live_kids_item_details"
		   	    android:textColor="#000000"
		   	    android:layout_marginTop="5dp"
		   	    android:layout_width="wrap_content"
		   	    android:layout_height="wrap_content"
		   	    android:layout_margin="3dp"
		   	    android:textSize="23sp"
		   	    />
		    <RelativeLayout 
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:layout_marginTop="10dp"
		        android:layout_margin="3dp"
		        android:layout_marginBottom="10dp"
		        >
		        <LinearLayout
		            android:layout_width="wrap_content"
		        	android:layout_height="wrap_content" 
		        	android:layout_alignParentLeft="true"
		        	android:orientation="horizontal"
	            	>
	    		<TextView 
	        		android:id="@+id/live_kids_item_time_text"
	        		android:layout_width="wrap_content"
	        		android:layout_marginLeft="3dp"
	        		android:layout_gravity="center_vertical"
	        		android:layout_height="wrap_content"
	        		android:textColor="#f0938c"
	        		android:textSize="14sp"
	        		/>
	    		</LinearLayout>
	    	<LinearLayout
	            android:layout_width="100dp"
	        	android:layout_height="wrap_content" 
	        	android:layout_alignParentRight="true"
	        	android:layout_marginRight="3dp"
	        	android:orientation="horizontal"
	            >
	            <ImageView 
	        		android:layout_width="15dp"
	        		android:layout_height="20dp"
	        		android:visibility="gone"
	        		android:id="@+id/live_kids_item_position"
	        		android:background="@drawable/location"
	        		/>
	    		<TextView 
	        		android:id="@+id/live_kids_item_position_text"
	        		android:layout_width="wrap_content"
	        		android:layout_marginLeft="3dp"
	        		android:singleLine="true"
	        		android:layout_gravity="center_vertical"
	        		android:layout_height="wrap_content"
	        		android:textColor="#f0938c"
	        		android:textSize="14sp"
	        		/>
	    	</LinearLayout>
	    </RelativeLayout>
	    </LinearLayout>
	</LinearLayout>

</LinearLayout>